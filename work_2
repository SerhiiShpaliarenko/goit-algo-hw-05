def binary_search(arr, target):
    """
    Виконує двійковий пошук у відсортованому масиві дробових чисел.
    
    Args:
        arr (list[float]): Відсортований список чисел.
        target (float): Значення, яке шукаємо (або його верхню межу).
        
    Returns:
        tuple: (кількість_ітерацій, верхня_межа)
               верхня_межа - це найменший елемент у масиві, який >= target.
               Якщо всі елементи менші за target, верхня межа буде None.
    """
    low = 0
    high = len(arr) - 1
    iterations = 0
    upper_bound = None

    while low <= high:
        iterations += 1
        mid = (low + high) // 2

        if arr[mid] < target:
            # Якщо середній елемент менший за ціль, 
            # то він не може бути верхньою межею. Шукаємо в правій половині.
            low = mid + 1
        else:
            # Якщо середній елемент більший або рівний цілі (arr[mid] >= target),
            # то це потенційна "верхня межа".
            upper_bound = arr[mid]
            # Але ми хочемо знайти НАЙМЕНШИЙ з таких елементів, тому
            # пробуємо пошукати ще лівіше (у меншій половині).
            high = mid - 1

    return (iterations, upper_bound)

# --- Тестування ---
if __name__ == "__main__":
    # Відсортований масив дробових чисел
    sorted_data = [1.1, 1.5, 2.4, 3.6, 4.8, 5.9, 7.2, 8.5, 9.1, 10.5]
    
    # Тест 1: Число існує в масиві (очікуємо саме це число як верхню межу)
    target1 = 3.6
    result1 = binary_search(sorted_data, target1)
    print(f"Шукаємо {target1}: Ітерацій = {result1[0]}, Верхня межа = {result1[1]}")
    
    # Тест 2: Числа немає, шукаємо "верхню межу" (наприклад, для 4.0 це має бути 4.8)
    target2 = 4.0
    result2 = binary_search(sorted_data, target2)
    print(f"Шукаємо {target2}: Ітерацій = {result2[0]}, Верхня межа = {result2[1]}")
    
    # Тест 3: Число більше за всі елементи (межі немає)
    target3 = 20.0
    result3 = binary_search(sorted_data, target3)
    print(f"Шукаємо {target3}: Ітерацій = {result3[0]}, Верхня межа = {result3[1]}")

    # Тест 4: Число менше за всі елементи (межа - перший елемент)
    target4 = 0.5
    result4 = binary_search(sorted_data, target4)
    print(f"Шукаємо {target4}: Ітерацій = {result4[0]}, Верхня межа = {result4[1]}")
